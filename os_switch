# in your .zshrc/.bashrc just do
# source <path_here>/os_switch
# to switch openstack env in shell, just do e[Enter]

function e {
    A=""
    echo "which envrionment:"
    echo " * [p]roduciton"
    echo " * [t]esting"
    read i
    case $i in
      ('p'|'P') A="https://cloud.forgeservicelab.fi:5001/v2.0" ;;
      ('t'|'T') A="https://forge-test.csc.fi:5001/v2.0";;
      (*) echo "Invalid choice" ;;
    esac
    if [ -n "$A" ]; then
        export OS_AUTH_URL=$A
    fi
}

